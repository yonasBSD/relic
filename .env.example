# Relic Environment Variables
# Copy this file to .env and update values for your environment

# ========== Application ==========
DEBUG=true
APP_NAME=Relic
APP_VERSION=1.0.0

# ========== Database ==========

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/relic_db

# ========== S3 / MinIO ==========
# MinIO (local development)
#S3_ENDPOINT_URL=http://localhost:9000
#S3_ACCESS_KEY=minioadmin
#S3_SECRET_KEY=minioadmin

# AWS s3 (production)
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key

S3_BUCKET_NAME=relics
S3_REGION=us-east-1

# ========== Upload Limits ==========
# Maximum file size in bytes (100MB default)
MAX_UPLOAD_SIZE=104857600

# ========== CORS ==========
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173, http://localhost

# ========== Admin Configuration ==========
# Comma-separated list of client IDs with admin privileges
# To get your client ID: Open browser DevTools (F12) and run:
# localStorage.getItem('relic_client_key')
# Example: ADMIN_CLIENT_IDS=5cdb7b79c38385db9f5b5f6ad884c8ef,a1b2c3d4e5f6789012345678abcdef01
ADMIN_CLIENT_IDS=

# ========== Server ==========
# Host and port
HOST=0.0.0.0
PORT=8000

# ========== S3 Bucket Sync ==========
# Enable/disable automatic bucket sync to S3
S3_SYNC_ENABLED=true

# S3 destination endpoint (use s3.amazonaws.com for AWS, or your S3-compatible endpoint)
S3_SYNC_ENDPOINT=https://s3.amazonaws.com

# S3 credentials for destination bucket
S3_SYNC_ACCESS_KEY=your-aws-access-key
S3_SYNC_SECRET_KEY=your-aws-secret-key

# Destination bucket name
S3_SYNC_BUCKET=relic-backup

# S3 region
S3_SYNC_REGION=us-east-1

# Sync interval in seconds (default: 1800 = 30 minutes)
S3_SYNC_INTERVAL=1800

# Maximum retry attempts on sync failure
S3_SYNC_MAX_RETRIES=3

# Delay between retries in seconds
S3_SYNC_RETRY_DELAY=60

# Timezone for sync logs
S3_SYNC_TIMEZONE=UTC
